pipeline {
    agent any

    environment {
        NODEJS_HOME = "/usr/bin"  // Update this with your actual path
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Print the current directory
                    echo "Current directory: ${pwd()}"
                    
                    // Install project dependencies with verbose output
                    sh 'npm install --verbose'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Your deployment steps here
                    // For example, deploy to your Ubuntu1 server
                    // Ensure that you have SSH keys set up for authentication

                    // Example deployment using SSH with StrictHostKeyChecking=no
                    sh 'ssh -o StrictHostKeyChecking=no -i /var/lib/jenkins/.ssh/key.pem ubuntu@65.2.169.76 "cd /home/ubuntu/my-node-app && git pull origin master && npm install && pm2 restart your-app"'
                }
            }
        }
    }
}
