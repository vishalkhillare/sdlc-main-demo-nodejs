pipeline {
    agent any

    environment {
        NODEJS_HOME = "/usr/bin"  // Update this with your actual path
        PATH = "${NODEJS_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }

        stage('Build') {
            steps {
                script {
                    // Print the current directory
                    echo "Current directory: ${pwd()}"
                    
                    // Install project dependencies
                    sh 'npm install'
                }
            }
        }

        stage('Test') {
            steps {
                script {
                    // Run tests
                    sh 'npm test'
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Your deployment steps here
                    // For example, deploy to your Ubuntu1 server
                    // Ensure that you have SSH keys set up for authentication

                    // Set the project directory
                    def projectDir = "/var/lib/jenkins/my-node-app"

                    // Create the project directory if it doesn't exist
                    sh "mkdir -p ${projectDir}"

                    // Change to the project directory
                    dir(projectDir) {
                        // Example deployment using SSH with StrictHostKeyChecking=no
                        sh 'ssh -o StrictHostKeyChecking=no -i /var/lib/jenkins/.ssh/key.pem ubuntu@13.127.27.143 "cd ${projectDir} && git pull origin master && npm install && pm2 restart your-app"'
                    }
                }
            }
        }
    }
}
